{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "rxjs": ["node_modules/rxjs/Rx.d.ts"],
      "mario-utilities": ["node_modules/mario-utilities/index.d.ts"]
    },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./build/",
    "rootDir": "server",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "removeComments": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es2015.core",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "dom"
    ]
  },
  "include": [
    "./server/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compileOnSave": false
}
